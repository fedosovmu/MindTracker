#:import AppColors app_colors.AppColors


<BackgroundColor@Widget>
    background_color: 0, 0, 0, 0
    canvas.before:
        Color:
            rgba: root.background_color
        Rectangle:
            size: self.size
            pos: self.pos


<ImagePlaceholder@Label+BackgroundColor>
    background_color: AppColors.ImageBackground
    text: 'Картинка'
    color: AppColors.ImageLable
    font_size: dp(18)


<MainButton@Button>
    background_color: 0, 0, 0, 0
    color: AppColors.White
    font_size: dp(18)

    canvas.before:
        Color:
            rgba: AppColors.MainColor if self.state=='normal' else AppColors.PressedButton
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [dp(16),]


<TextButton@Button>
    background_color: 0, 0, 0, 0
    font_size: dp(18)
    color: AppColors.MainColor if self.state=='normal' else AppColors.PressedButton
    size_hint: (None, None)


<MainText@Label>:
    color: AppColors.SilverWhite
    multiline: True
    font_size: dp(18)
    line_height: 1.15
    text_size: self.size
    valign: 'top'
    halign: 'left'

<MiniText@MainText>:
    font_size: dp(14)

<HeaderText@MainText>:
    font_size: dp(20)
    bold: True