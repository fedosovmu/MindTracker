#:include kv_lang/widgets/main_widgets.kv


<MoodAssessmentScreen@Screen>:
    BoxLayout:
        orientation: 'vertical'

        HeaderText:
            text: 'Как ваше настроение?'
            height: dp(56)
            size_hint: (1, None)
            padding: dp(24), dp(0)

        Button:
            text: 'Mood assesment'

        AnchorLayout:
            height: dp(60)
            size_hint: (1, None)
            padding: dp(16), dp(0)

            MainButton:
                text: 'Принимаю'
                on_press: print("Assess")

        AnchorLayout:
            height: dp(63)
            size_hint: (1, None)
            anchor_x: 'center'
            anchor_y: 'top'

            TextButton:
                text: 'Пропустить'
                size: dp(160), dp(50)
                on_press: print('Skip')

