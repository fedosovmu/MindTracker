#:import AppColors app_colors.AppColors


<MoodAssessmentScreen@Screen+BackgroundColor>:
    background_color: AppColors.Dark

    BoxLayout:
        orientation: 'vertical'

        BoxLayout:
            orientation: 'horizontal'
            height: dp(56)
            size_hint: (1, None)

            Button:
                text: 'X'
                size_hint: (None, None)
                size: dp(56), dp(56)

            HeaderText:
                text: 'X Как ваше настроение?'
                padding: dp(23), dp(16)


        MiniText:
            text: 'Мы используем шестибальную систему оценки настроения.'
            padding: dp(16), dp(16)
            height: dp(84)
            size_hint: (1, None)

        Button:
            text: 'Mood Assessment'
            height: dp(80)
            size_hint: (1, None)

        MiniText:
            text: '1 - Очень плохое\n2 - Плохое\n3 - Ниже среднего\n4 - Выше среднего\n5 - Хорошее\n6 - Очень хорошее'
            line_height: 1.5
            padding: dp(16), dp(36)

        AnchorLayout:
            height: dp(63)
            size_hint: (1, None)
            anchor_x: 'center'
            anchor_y: 'top'

            TextButton:
                id: skip_button
                text: 'Пропустить'
                size: dp(160), dp(50)
                on_press: print("Skip")