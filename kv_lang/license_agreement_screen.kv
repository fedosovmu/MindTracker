<LicenseAgreementScreen@Screen>:
    BoxLayout:
        orientation: 'vertical'

        Image:
            source: 'data/images/360x270.png'
            allow_stretch: True
            keep_ratio: False
            height: dp(270)
            size_hint: (1, None)

        Label:
            text: 'Для использования приложения вы должны принять пользовательское соглашение'
            multiline: True
            font_size: dp(18)
            line_height: dp(.6)
            text_size: self.size
            valign: 'top'
            halign: 'left'
            padding: dp(24), dp(24)


        Button:
            id: license_agreement_button
            text: 'Принимаю'
            height: dp(70)
            size_hint: (1, None)

        Button:
            id: license_agreement_button
            text: 'Не принимаю'
            height: dp(70)
            size_hint: (1, None)
