#:import get_color_from_hex kivy.utils.get_color_from_hex


<LicenseAgreementScreen@Screen>:
    BoxLayout:
        orientation: 'vertical'

        Label:
            text: 'Картинка'
            color: get_color_from_hex('#A3A3A3')
            font_size: dp(18)
            height: dp(270)
            size_hint: (1, None)
            canvas.before:
                Color:
                    rgb: get_color_from_hex('#2C2C2C')
                Rectangle:
                    size: self.size
                    pos: self.pos

        Label:
            text: 'Для использования приложения вы должны принять пользовательское соглашение'
            multiline: True
            font_size: dp(18)
            line_height: dp(.6)
            text_size: self.size
            valign: 'top'
            halign: 'left'
            padding: dp(24), dp(24)



        Button:
            id: license_agreement_agree_button
            text: 'Принимаю'
            font_size: dp(18)
            height: dp(70)
            size_hint: (1, None)

        Button:
            id: license_agreement_disagree_button
            text: 'Не принимаю'
            font_size: dp(18)
            height: dp(70)
            size_hint: (1, None)
