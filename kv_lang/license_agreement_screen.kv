#:import get_color_from_hex kivy.utils.get_color_from_hex
#:import AppColors app_colors.AppColors
#:include kv_lang/widgets.kv


<LicenseAgreementScreen@Screen+BackgroundColor>:
    background_color: AppColors.Dark

    BoxLayout:
        orientation: 'vertical'

        BackgroundLabel:
            text: 'Картинка'
            color: AppColors.ImageLable
            font_size: dp(18)
            height: dp(270)
            size_hint: (1, None)
            background_color: AppColors.ImageBackground

        Label:
            text: 'Для использования приложения вы должны принять пользовательское соглашение'
            color: AppColors.SilverWhite
            multiline: True
            font_size: dp(18)
            line_height: dp(.6)
            text_size: self.size
            valign: 'top'
            halign: 'left'
            padding: dp(24), dp(24)


        AnchorLayout:
            height: dp(70)
            size_hint: (1, None)
            padding: dp(16), dp(5)

            RoundedButton:
                id: license_agreement_agree_button
                text: 'Принимаю'
                font_size: dp(18)
                on_press: print("Agree")

        AnchorLayout:
            height: dp(70)
            size_hint: (1, None)
            anchor_x: 'center'
            anchor_y: 'center'

            Button:
                id: license_agreement_disagree_button
                text: 'Не принимаю'
                font_size: dp(18)
                background_color: 0, 0, 0, 0
                size_hint: (None, None)
                size: dp(160), dp(50)
                on_press: print("DisAgree")

