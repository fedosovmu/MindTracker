#:include kv_lang/widgets/main_widgets.kv


<LicenseAgreementScreen@Screen>:
    BoxLayout:
        orientation: 'vertical'

        AnchorLayout:
            height: dp(280+27*2)
            size_hint: (1, None)
            padding: dp(16), dp(27)

            ImagePlaceholder:


        MainText:
            text: 'Для использования приложения вы должны принять пользовательское соглашение'
            padding: dp(24), dp(0)


        AnchorLayout:
            height: dp(60)
            size_hint: (1, None)
            padding: dp(16), dp(0)

            MainButton:
                text: 'Принимаю'
                on_press: print("Agree"); app.switch_screen('mood_assessment')

        AnchorLayout:
            height: dp(8)
            size_hint: (1, None)

        AnchorLayout:
            height: dp(63)
            size_hint: (1, None)
            anchor_x: 'center'
            anchor_y: 'top'

            TextButton:
                text: 'Не принимаю'
                size: dp(160), dp(60)
                on_press: print("DisAgree")

