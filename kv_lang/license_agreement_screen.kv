#:include kv_lang/widgets.kv


<LicenseAgreementScreen@Screen>:
    background_color: app.colors.Dark

    BoxLayout:
        orientation: 'vertical'

        ImagePlaceholder:
            height: dp(270)
            size_hint: (1, None)

        MainText:
            text: 'Для использования приложения вы должны принять пользовательское соглашение'
            padding: dp(24), dp(24)


        AnchorLayout:
            height: dp(70)
            size_hint: (1, None)
            padding: dp(16), dp(5)

            MainButton:
                id: license_agreement_agree_button
                text: 'Принимаю'
                #on_press: print("Agree")
                on_press: app.switch_screen('mood_assessment')

        AnchorLayout:
            height: dp(63)
            size_hint: (1, None)
            anchor_x: 'center'
            anchor_y: 'top'

            TextButton:
                id: license_agreement_disagree_button
                text: 'Не принимаю'
                size: dp(160), dp(50)
                on_press: print("DisAgree")

