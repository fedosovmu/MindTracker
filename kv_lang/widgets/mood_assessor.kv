#:include kv_lang/widgets/main_widgets.kv


<MoodAssessor@AnchorLayout>
    content: app.content.mood_assessment_screen['mood_assessor']
    default_mood: 4
    _mood_value: self.ids.mood_assessor_slider.value
    mood: self.default_mood if self._mood_value == 0 else self._mood_value

    AnchorLayout:
        padding: dp(16), dp(60)
        anchor_y: 'bottom'

        BoxLayout:
            orientation: 'vertical'
            height: dp(209)
            size_hint: (1, None)

            canvas.before:
                Color:
                    rgba: app.colors.mood_assessor_background_color
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [dp(24),]

            HeaderText:
                text: root.content['mood_names'][str(root.mood)]
                valign: 'bottom'
                halign: 'center'

            BoxLayout:
                orientation: 'horizontal'
                padding: dp(30), dp(0)
                height: dp(40)
                size_hint: (1, None)

                MainText:
                    text: root.content['secondary_label_mood_text']
                    valign: 'bottom'
                    font_size: dp(14)
                    color: app.colors.mood_assessor_secondary_text_color

                MainText:
                    text: root.content['secondary_label_pull_text']
                    valign: 'bottom'
                    halign: 'right'
                    font_size: dp(14)
                    color: app.colors.mood_assessor_secondary_text_color

            AnchorLayout:
                height: dp(80)
                size_hint: (1, None)
                padding: dp(30), dp(0)

                Slider:
                    id: mood_assessor_slider
                    min: 1
                    max: 7
                    value: root.default_mood
                    step: 1


    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'bottom'

        padding: dp(0), dp(150)

        Image:
            id: mood_sphere_image
            source: root.content['paths_to_mood_spheres'][(root.mood)]
            size: dp(self.texture.width), dp(self.texture.height)
            size_hint: (None, None)
            allow_stretch: True