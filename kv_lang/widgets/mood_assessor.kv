#:include kv_lang/widgets/main_widgets.kv


<MoodAssessor@AnchorLayout>
    AnchorLayout:
        padding: dp(16), dp(60)
        anchor_y: 'bottom'

        BoxLayout:
            orientation: 'vertical'
            height: dp(209)
            size_hint: (1, None)

            canvas.before:
                Color:
                    rgba: app.colors.mood_assesstor_background_color
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [dp(24),]

            HeaderText:
                text: 'Нормальное'
                valign: 'bottom'
                halign: 'center'

            BoxLayout:
                orientation: 'horizontal'
                padding: dp(30), dp(0)
                height: dp(40)
                size_hint: (1, None)

                MainText:
                    text: 'Настроение'
                    valign: 'bottom'
                    font_size: dp(14)
                    color: app.colors.mood_assessor_secondary_text_color

                MainText:
                    text: 'Потяни'
                    valign: 'bottom'
                    halign: 'right'
                    font_size: dp(14)
                    color: app.colors.mood_assessor_secondary_text_color

            Slider:
                min: 1
                max: 7
                value: 4
                height: dp(80)
                size_hint: (1, None)

    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'bottom'

        padding: dp(0), dp(150)

        Image:
            source: 'data/images/mood_spheres/4.png'
            size: dp(self.texture.width), dp(self.texture.height)
            size_hint: (None, None)
            allow_stretch: True