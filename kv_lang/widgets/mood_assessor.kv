<MoodAssessor@AnchorLayout>
    AnchorLayout:
        padding: dp(16), dp(60)
        anchor_y: 'bottom'

        Label:
            height: dp(209)
            size_hint: (1, None)

            canvas.before:
                Color:
                    rgba: app.colors.mood_assesstor_background_color
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [dp(24),]

    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'bottom'

        padding: dp(0), dp(150)

        Image:
            source: 'data/images/mood_spheres/4.png'
            size: dp(self.texture.width), dp(self.texture.height)
            size_hint: (None, None)
            allow_stretch: True