#:include kv/widgets/main_widgets.kv


<MoodAssessor@AnchorLayout>
    content: app.content.mood_assessment_screen['mood_assessor']
    _mood_value: self.ids.mood_assessor_slider.value
    mood: root.content['default_mood'] if self._mood_value == 0 else self._mood_value

    AnchorLayout:
        padding: dp(16), dp(60)
        anchor_y: 'bottom'

        BoxLayout:
            orientation: 'vertical'
            height: dp(209)
            size_hint: (1, None)

            canvas.before:
                Color:
                    rgba: app.colors.mood_assessor_background_color
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [dp(24),]

            HeaderText:
                text: root.content['mood_names'][str(root.mood)]
                valign: 'bottom'
                halign: 'center'

            BoxLayout:
                orientation: 'horizontal'
                padding: dp(30), dp(0)
                height: dp(40)
                size_hint: (1, None)

                MainText:
                    text: root.content['secondary_label_mood_text']
                    valign: 'bottom'
                    font_size: dp(14)
                    color: app.colors.mood_assessor_secondary_text_color

                MainText:
                    text: root.content['secondary_label_pull_text']
                    valign: 'bottom'
                    halign: 'right'
                    font_size: dp(14)
                    color: app.colors.mood_assessor_secondary_text_color

            AnchorLayout:
                height: dp(80)
                size_hint: (1, None)
                padding: dp(18), dp(0)
                anchor_y: 'top'


                AnchorLayout:
                    height: dp(40)
                    padding: dp(14), dp(0)
                    size_hint: (1, None)
                    anchor_y: 'bottom'

                    Image:
                        source: 'data/images/mood_slider.png'
                        size: dp(170), dp(14)
                        size_hint: (1, None)
                        allow_stretch: True
                        keep_ratio: False
                        color: app.colors.mood_colors[str(mood_assessor_slider.value)]

                AnchorLayout:
                    height: dp(44)
                    padding: mood_assessor_slider.value_normalized * (mood_assessor_slider.width-dp(33)) + dp(4), dp(0)
                    size_hint: (1, None)
                    anchor_y: 'bottom'
                    anchor_x: 'left'

                    Image:
                        id: mood_slider_cursor
                        source: 'data/images/white_elips.png'
                        size: dp(24), dp(24)
                        size_hint: (None, None)
                        allow_stretch: True
                        keep_ratio: False

                    Image:
                        source: 'data/images/white_elips.png'
                        size: dp(14), dp(14)
                        size_hint: (None, None)
                        pos: mood_slider_cursor.x + dp(5), mood_slider_cursor.y + dp(5)
                        color: app.colors.mood_assessor_slider_cursor_colors[str(mood_assessor_slider.value)]

                Slider:
                    id: mood_assessor_slider
                    min: 1
                    max: 7
                    value: root.content['default_mood']
                    step: 1
                    opacity: 0



    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'bottom'

        padding: dp(0), dp(150)

        Image:
            id: mood_sphere_image
            source: root.content['paths_to_mood_spheres'][(root.mood)]
            size: dp(self.texture.width), dp(self.texture.height)
            size_hint: (None, None)
            allow_stretch: True